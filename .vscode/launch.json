  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug executable 'cli'",
      "cargo": {
        "args": [
          "build",
          "--bin=cli",
          "--package=cli"
        ],
        "filter": {
          "name": "cli",
          "kind": "bin"
        }
      },
      "args": [
        "install",
        "19"
      ],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in executable 'cli'",
      "cargo": {
        "args": [
          "test",
          "--no-run",
          "--bin=cli",
          "--package=cli"
        ],
        "filter": {
          "name": "cli",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in library 'shared'",
      "cargo": {
        "args": [
          "test",
          "--no-run",
          "--lib",
          "--package=shared"
        ],
        "filter": {
          "name": "shared",
          "kind": "lib"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    }
  ]
}
